<?xml version="1.0" encoding="UTF-8"?>
<compiz>
    <plugin name="stereo3d" useBcop="true">
	<short>Stereo 3D</short>
	<long>Enables the stereo effect for 3D Displays</long>
	<category>Effects</category>
	<deps>
		<requirement>
			<plugin>mousepoll</plugin>
		</requirement>

		<relation type="after">
			<plugin>opengl</plugin>
			<plugin>cube</plugin>
			<plugin>animation</plugin>
			<plugin>expo</plugin>
		</relation>
                
                
		<relation type="before">
		</relation>
	</deps>
	<display>

	<group>
		<short>Stereoscopic</short>	
	  
            <option name="output_mode" type="int">
		<short>Output Mode</short>
		<min>0</min>
		<max>3</max>
		<default>1</default>
		<desc>
		    <value>0</value>
		    <name>Stereo effect off</name>
		</desc>
		<desc>
		    <value>1</value>
		    <name>Optimized anaglyph</name>
		</desc>
		<desc>
		    <value>2</value>
		    <name>Row interlaced</name>
		</desc>

		<desc>
		    <value>3</value>
		    <name>Column interlaced</name>
		</desc>
	    </option>


            <option name="invert" type="bool">
		<short>Invert stereo</short>
                <long>Switches left and right eye</long>
           	 <default>false</default>
            </option>

            <option name="strength" type="float">
                <short>Strength</short>
                <long>Strength of stereo effect (maximum disparity in px)</long>
                <default>105</default>
                <min>0</min>
                <max>300</max>
                <precision>1</precision>
            </option>


            <option name="fov" type="float">
                <short>Fov</short>
                <long>Fov</long>
                <default>60.0</default>
                <min>10.0</min>
                <max>120.0</max>
                <precision>1.0</precision>
            </option>

            <option name="depth" type="float">
                <short>Background depth</short>
                <long>Background depth</long>
                <default>0.3f</default>
                <min>0.0</min>
                <max>4.0</max>
                <precision>0.01</precision>
            </option>


    </group>

    <group>
	<short>Appearance</short>
	
            <option name="lighting_strength" type="float">
                <short>Lighting</short>
                <long>Simple lighting</long>
                <default>0.5f</default>
                <min>0.0</min>
                <max>1.0</max>
                <precision>0.01</precision>
            </option>

	    <option name="edges_strength" type="float">
                <short>Edges</short>
                <long>Scene edges</long>
                <default>0.5f</default>
                <min>0.0</min>
                <max>1.0</max>
                <precision>0.01</precision>
            </option>

    </group>


    <group>
	<short>Other</short>
                
		<option type="key" name="toggle">
		    <short>Toggle off/on</short>
		    <long>Toggle off/on</long>
		    <default>&lt;Super&gt;d</default>
		</option>

		<option type="button" name="move_foreground_in_button">
		    <short>Move foreground "In"</short>
		    <long>Move foreground "In"</long>
		    <default>&lt;Super&gt;Button4</default>
		</option>

		
		<option type="button" name="move_foreground_out_button">
		    <short>Move foreground "Out"</short>
		    <long>Move foreground "Out"</long>
		    <default>&lt;Super&gt;Button5</default>
		</option>
		
		
		<option type="key" name="reset_foreground_depth_button">
		    <short>Reset foreground depth</short>
		    <long>Reset foreground depth</long>
		    <default>&lt;Super&gt;0</default>
		</option>
                
                
            <option name="drawMouse" type="bool">
		<short>Draw 3D Mouse</short>
                <long>Draws mouse in 3D space, using mousepoll plugin to obtain mouse position</long>
           	 <default>true</default>
            </option>

	
	
            <option name="window_match" type="match">
					<short>Floating Window Match</short>
					<long>Windows that should be handled by 3D</long>
					<default>Toolbar | Utility | Dialog | Normal | Unknown</default>
            </option>

            <option name="desktop_match" type="match">
					<short>Background Match</short>
					<long>Which windows should be used as background</long>
					<default>Desktop</default>
            </option>

            <option name="dock_match" type="match">
					<short>Dock Match</short>
					<long>Windows that would be placed at zero-depth</long>
					<default>Dock</default>
            </option>

    </group>



	   </display>
    </plugin>
</compiz>
